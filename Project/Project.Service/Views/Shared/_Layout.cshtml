@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dược phẩm Hati</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Libs/alertify/alertify.core.css" rel="stylesheet" />
    <link href="~/Libs/alertify/alertify.default.css" rel="stylesheet" />
    <link href="~/Libs/formvalidation/css/formValidation.min.css" rel="stylesheet" />
    @*<link href="~/Libs/timepicker/jquery.timepicker.min.css" rel="stylesheet" />*@
    <link rel="icon" type="image/png" href="~/Files/images/system/FAV.png" />
    <script src="~/Libs/ckeditor/ckeditor.js"></script>
    <script src="~/Libs/ckfinder/ckfinder.js"></script>
    @*<script src="~/Libs/timepicker/jquery.timepicker.min.js"></script>*@
</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year</p>
        </footer>
    </div>

    <div class="modal" tabindex="-1" role="dialog" id="modal-qltaikhoan"></div>
    <script src="~/Libs/alertify/alertify.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>
    <script src="~/Libs/formvalidation/js/formValidation.min.js"></script>
    <script src="~/Libs/formvalidation/js/framework/bootstrap.min.js"></script>
    <script>
        function CKEditor(id, lang) {
            CKEDITOR.replace(id, { language: lang }).on('change', function (e) {
                if (document.activeElement.nodeName == "IFRAME") {
                    $('[name=' + id + ']').val(e.editor.getData());
                    $('#frm-capnhat').formValidation('updateStatus', id, 'NOT_VALIDATED').formValidation('validateField', id);
                }
            });
        }
        function formarCurrencyVND(money) {
            const config = { style: 'currency', currency: 'VND', maximumFractionDigits: 9 }
            const formated = new Intl.NumberFormat('vi-VN', config).format(money);
            return formated;
        }
    </script>
    
    @RenderSection("scripts", required: false)
</body>
</html>