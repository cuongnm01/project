@using Common.Constants
@using Project.Model.Model
@using Common.Helpers
@using Common.Resources
@using Project.Model.Model
@using Project.Model.Configuration;

@model IEnumerable<ProductInfo>
@{
    int stt = 0;
    UserInfo nd_dv = (UserInfo)Session[ConfigKey.SESSION_LOGIN];

}
@if (Model != null && Model.Count() > 0)
{
    foreach (var item in Model)
    {
        <tr>
            <td class="text-center">@(++stt)</td>

            <td class="text-center">
                <span class="">@(item.Product.Name)</span>
            </td>
            <td class="text-center">
                <span class="">@(item.Category.Name)</span>
            </td>
            <td class="text-center">
                <span class="">@item.Product.CreateDate.Value.ToString("dd/MM/yyyy")</span>
            </td>
            <td class="text-center"><img width="50" height="50" src="@(string.IsNullOrEmpty(item.Product.Image)?EnumImageDefault.NEWS_EMPTY.Replace("~",""):item.Product.Image.Replace("~","")) " /></td>
            <td class="text-center">
                <span data-id="@item.Product.ProductId" onclick="CapNhatTrangThai($(this))" style="cursor: pointer" title="Cập nhật trạng thái">
                    <i class="fa @(item.Product.StatusID == EnumStatus.ACTIVE? "fa-unlock":"fa-lock")" style="font-size:22px;"></i>
                </span>
            </td>

            <td class="text-center clickable-td">
                <div class="dropdown">
                    <button class="btn btn-xs btn-primary dropdown-toggle" type="button" data-toggle="dropdown" style="width:160px;">
                        Action
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        @if (nd_dv.Users.PermissionID == EnumUserType.ADMIN || nd_dv.User_Permissions.FirstOrDefault(x => x.Functions == EnumFunctions.Recipe && (x.Fulls == EnumStatus.ACTIVE || x.Updates == EnumStatus.ACTIVE)) != null)
                        {
                            <li>
                                <a class="btn btn-xs btn-success" style="cursor:pointer;padding-right:10px;" href="@Url.Action("Update","Products", new {area ="Admin",id = item.Product.ProductId})"><i class="fa fa-pencil-square-o"></i> @Message.ACTION_UPDATE</a>
                            </li>
                        }
                        @if (nd_dv.Users.PermissionID == EnumUserType.ADMIN || nd_dv.User_Permissions.FirstOrDefault(x => x.Functions == EnumFunctions.Recipe && (x.Fulls == EnumStatus.ACTIVE || x.Deletes == EnumStatus.ACTIVE)) != null)
                        {
                            <li>
                                <a class="btn btn-xs btn-danger" data-id="@item.Product.ProductId" onclick="Xoa($(this))"><i class="fa fa-trash"></i> @Message.ACTION_DELETE</a>
                            </li>
                        }
                    </ul>
                </div>

            </td>
        </tr>

    }
}
<script>
    $('#idsotrang').val('@ViewBag.sotrang');
    document.getElementById("idtongsotrang").innerHTML = '@ViewBag.tongsotrang';
    document.getElementById("idtongso").innerHTML = '(' + '@ViewBag.tongso' + ')';
    $(".clickable-td").on("click", function (e) {
        //e.stopPropagation();
        $(".dropdown-toggle").dropdown();
    });

</script>

